<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">?android:attr/textColorSecondaryNoDisable</item>


    </style>

    <style name="myStyle" parent="Theme.AppCompat.Light.DarkActionBar">


        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColor">#B71C1C</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/marginB</item>

    </style>


    <style name="myStyle2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#B71C1C</item>
        <item name="android:padding">@dimen/padding2</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/marginB2</item>
        <item name="android:layout_marginTop">@dimen/marginT</item>


    </style>

    <style name="myStyle3" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:layout_marginBottom">@dimen/marginB2</item>
        <item name="android:layout_marginTop">@dimen/marginT2</item>
        <item name="android:layout_marginLeft">@dimen/marginL</item>
        <item name="android:layout_marginRight">@dimen/marginR</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="myStyle4" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="backgroundTint">#B71C1C</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/marginB2</item>
        <item name="android:layout_marginTop">@dimen/marginT2</item>
        <item name="android:layout_marginLeft">@dimen/marginL</item>
        <item name="android:layout_marginRight">@dimen/marginR</item>

    </style>


    <style name="myStyle5" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="backgroundTint">#B71C1C</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>

    </style>


</resources>
